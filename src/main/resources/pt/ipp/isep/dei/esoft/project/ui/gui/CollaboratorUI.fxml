<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.CollaboratorUIController"
      alignment="CENTER" spacing="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="200.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Collaborator Menu" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black;" />

    <!-- Welcome message with the collaborator's name -->
    <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333;" />

    <!-- Consult Tasks and Record Task buttons -->
    <Button text="Consult Tasks" onAction="#handleConsultTasks" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"/>
    <Button text="Record Task" onAction="#handleRecordTask" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"/>

    <!-- Ensure elements stretch vertically -->
    <VBox.margin>
        <Insets top="20"/>
    </VBox.margin>

    <!-- Logout button -->
    <Button text="Logout" onAction="#handleLogout" style="-fx-font-size: 16px; -fx-background-color: #FF5733; -fx-text-fill: white; -fx-background-radius: 5;" />
</VBox>




