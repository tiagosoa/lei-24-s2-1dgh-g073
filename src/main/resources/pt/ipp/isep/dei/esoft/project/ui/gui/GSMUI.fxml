<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Priority?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.GSMUIController"
      spacing="20"
      prefHeight="400.0"
      prefWidth="300.0"
      style="-fx-background-color: #f7f7f7;">

    <VBox.margin>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </VBox.margin>

    <Label text="Welcome to Green Space Manager"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"
           VBox.vgrow="NEVER"/>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Button text="Register Green Space"
                onAction="#handleRegisterGS"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Add Entry to To-Do List"
                onAction="#handleAddEntryToDoList"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Add Entry to Agenda"
                onAction="#handleAddEntryAgenda"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Assign Team to Agenda Entry"
                onAction="#handleAssignTeam"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Postpone Agenda Entry"
                onAction="#handlePostponeEntry"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Cancel an Agenda Entry"
                onAction="#handleCancelEntry"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="Assign Vehicle to Agenda Entry"
                onAction="#handleAssignVehicle"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Button text="List Managed Green Spaces"
                onAction="#handleListManagedGS"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"/>
    </VBox>

</VBox>


