<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.GSMUIController"
      alignment="CENTER" spacing="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="200.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Register Green Space" onAction="#handleRegisterGS"/>
    <Button text="Add Entry to To-Do List" onAction="#handleAddEntryToDoList"/>
    <Button text="Add Entry to Agenda" onAction="#handleAddEntryAgenda"/>
    <Button text="Assign Team to Agenda Entry" onAction="#handleAssignTeam"/>
    <Button text="Postpone Agenda Entry" onAction="#handlePostponeEntry"/>
    <Button text="Cancel an Agenda Entry" onAction="#handleCancelEntry"/>
    <Button text="Assign Vehicle to Agenda Entry" onAction="#handleAssignVehicle"/>
    <Button text="List Managed Green Spaces" onAction="#handleListManagedGS"/>

    <!-- Ensure elements stretch vertically -->
    <VBox.margin>
        <Insets top="20"/>
    </VBox.margin>
</VBox>
