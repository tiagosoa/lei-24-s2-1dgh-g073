<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.GSMUIController"
      spacing="20"
      prefHeight="400.0"
      prefWidth="300.0"
      style="-fx-background-color: #f7f7f7;">

    <!-- Padding for the entire VBox -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Green Space Manager" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;">
        </Label>
        <Label text="Main Menu" style="-fx-font-size: 16px; -fx-text-fill: #333333;">
        </Label>
    </VBox>

    <!-- Menu Section -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Button text="Register Green Space"
                onAction="#handleRegisterGS"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="Add Entry to To-Do List"
                onAction="#handleAddEntryToDoList"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="Add Entry to Agenda"
                onAction="#handleAddEntryAgenda"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="Assign Team to Agenda Entry"
                onAction="#handleAssignTeam"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="Postpone Agenda Entry"
                onAction="#handlePostponeEntry"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="Cancel an Agenda Entry"
                onAction="#handleCancelEntry"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="Assign Vehicle to Agenda Entry"
                onAction="#handleAssignVehicle"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
        <Button text="List Managed Green Spaces"
                onAction="#handleListManagedGS"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"
                maxWidth="Infinity"/>
    </VBox>

    <!-- Bottom Section with Logout Button -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-font-size: 16px; -fx-background-color: #FF5733; -fx-text-fill: white; -fx-background-radius: 5;"/>
    </HBox>
</VBox>






